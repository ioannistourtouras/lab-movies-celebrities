<h2>Add a movie to our DB!</h2>
<form action="/movies/create" method="post">

<label for="title">Title:</label>
  <input
    type="text"
    name="title"
    id="title"
    value=""
    placeholder="Title of the movie"
  />
  <label for="author">Genre:</label>

   <input
    type="text"
    name="genre"
    id="author"
    value=""
    placeholder="Genre of the movie"
  />
  <label for="description">Plot:</label>

   <input
    type="text"
    name="plot"
    id="description"
    value=""
    placeholder="Plot of the movie"
  />
    

  <select name="cast" id="cast">
     {{#each allTheCelebrities}} 
  <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  
    </select>

  <button type="submit">Add the movie!</button>

</form>
